{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@env": [
        "node_modules/react-native-dotenv"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "src/**/*",
    "env.d.ts",
    "node_modules/react-native-dotenv",
    "node_modules/metro-react-native-babel-preset",
    "src/@types/env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
